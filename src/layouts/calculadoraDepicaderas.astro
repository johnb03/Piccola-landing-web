</svg>
      <div class="input-select">
        Regular<input class="combo" name="opcion" value="regular" type="radio" />
      </div>
    </div>
    <!-- end regular -->
     <br/>
    <!-- submit -->
     <button id="btnCalcular"  class="btn" type="submit"> Calcular</button>
     <!-- end submit -->
  </div>
  <!-- columna-2 -->
   <div class="flex flex-col gap-4 items-center">
      <textarea 
        class=" pt-6 border-solid border-2 w-full h-20 resize-noneo output-calculator box-shadow-main  rounded-md"
        name="price"
        id="total-price"
        placeholder="Precio total" disabled></textarea>
      <textarea
        class="p-6 border-solid border-2 w-full h-40 resize-none output-calculator box-shadow-main  rounded-md select-none"
        name="Details"
        id="detalles"
        placeholder="Detalle" disabled ></textarea>


       <div class="flex  items-center gap-2 w-full justify-center   mt-10 text-sm m-auto">
